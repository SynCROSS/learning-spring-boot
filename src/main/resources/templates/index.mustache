{{>layout/header}}
<h1>Starting Web Service with Spring Boot Ver.2</h1>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">Add Post</a>
      &nbsp; {{#userName}} Hi, <span id="user">{{userName}}</span> &nbsp;
      <a href="/logout" class="btn btn-info active" role="button">Log out</a> <!-- 스프링 시큐리티에서 기본적으로 제공하는 로그아웃 URL -->
      {{/userName}} &nbsp;
      {{^userName}}<!-- if(userName==null) -->
      <!-- 스프링 시큐리티에서 기본적으로 제공하는 로그인 URL -->
      <a
        href="/oauth2/authorization/google"
        class="btn active"
        role="button"
        style="border: 1px solid #4285F4"
      >
        Login with Google
      </a>

      <a
        href="/oauth2/authorization/naver"
        class="btn active"
        role="button"
        style="border: 1px solid #03C75A"
      >
        Login with Naver
      </a>

      {{/userName}}
    </div>
  </div>
  <table class="table table-horizontal table-bordered">
    <thead class="thread-strong">
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Author</th>
        <th>Last Modified Date</th>
      </tr>
    </thead>
    <tbody id="tbody">
      {{#posts}}
      <!-- posts라는 List를 순회함 == for -->
      <tr>
        <td>{{id}}</td>
        <!-- List의 컬럼명 -->
        <td>
          <a href="/posts/update/{{id}}"> {{title}} </a>
        </td>
        <td>{{author}}</td>
        <td>{{modifiedDate}}</td>
      </tr>
      {{/posts}}
    </tbody>
  </table>
</div>

{{>layout/footer}}