{{>layout/header}}
<h1>Add Post</h1>
<div class="col-md-12">
  <form action="">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" placeholder="Title" />
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input
        type="text"
        class="form-control"
        id="author"
        placeholder="Author"
      />
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea
        name=""
        id="content"
        cols="30"
        rows="10"
        class="form-control"
        placeholder="Content"
      ></textarea>
    </div>
  </form>
  <a href="/" class="btn btn-secondary" role="button">Cancel</a>
  <button class="btn btn-primary" id="save-btn">Add</button>
</div>
{{>layout/footer}}